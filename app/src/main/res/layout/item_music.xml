<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/audioImageView"
        android:layout_width="@dimen/album_preview_size"
        android:layout_height="@dimen/album_preview_size"
        android:layout_marginStart="14dp"
        android:scaleType="fitCenter"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/visualizerImageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:scaleType="fitCenter"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/audioImageView"
        app:layout_constraintEnd_toEndOf="@+id/audioImageView"
        app:layout_constraintStart_toStartOf="@+id/audioImageView"
        app:layout_constraintTop_toTopOf="@+id/audioImageView" />

    <TextView
        android:id="@+id/durationTextView"
        android:layout_width="38dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14dp"
        android:gravity="center"
        android:text="0:00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/isLoadedImageView"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/durationTextView"
        app:layout_constraintRight_toLeftOf="@+id/durationTextView"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/loaded" />

    <TextView
        android:id="@+id/artistTextView"
        style="@style/TextPrimary"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginEnd="14dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="14dp"
        android:gravity="bottom|start"
        android:text="ewefdfse"
        app:layout_constraintEnd_toStartOf="@+id/isLoadedImageView"
        app:layout_constraintLeft_toRightOf="@+id/audioImageView"
        app:layout_constraintStart_toEndOf="@+id/audioImageView"
        app:layout_constraintTop_toTopOf="@+id/audioImageView" />

    <TextView
        android:id="@+id/titleTextView"
        style="@style/TextPrimaryGray"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginEnd="14dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="14dp"
        android:gravity="top|start"
        android:text="esfrg"
        app:layout_constraintBottom_toBottomOf="@+id/audioImageView"
        app:layout_constraintEnd_toStartOf="@+id/isLoadedImageView"
        app:layout_constraintLeft_toRightOf="@+id/audioImageView"
        app:layout_constraintStart_toEndOf="@+id/audioImageView" />
</android.support.constraint.ConstraintLayout>