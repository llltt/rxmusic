<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/vizualizerImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:scaleType="fitCenter"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/durationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="0:00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/isLoadedImageView"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/durationTextView"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/loaded" />

    <TextView
        android:id="@+id/artistTextView"
        style="@style/TextPrimary"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="0dp"
        android:gravity="start|center_vertical"
        app:layout_constraintLeft_toRightOf="@+id/vizualizerImageView"
        app:layout_constraintRight_toLeftOf="@+id/isLoadedImageView"
        app:layout_constraintTop_toTopOf="@+id/vizualizerImageView" />

    <TextView
        android:id="@+id/titleTextView"
        style="@style/TextPrimaryGray"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="start|center_vertical"
        app:layout_constraintBottom_toBottomOf="@+id/vizualizerImageView"
        app:layout_constraintLeft_toRightOf="@+id/vizualizerImageView"
        app:layout_constraintRight_toLeftOf="@+id/isLoadedImageView" />
</android.support.constraint.ConstraintLayout>